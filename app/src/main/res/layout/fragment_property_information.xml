<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.jr.census.viewmodel.PropertyDetailViewModel" />


    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:theme="@style/LoginTheme"
        android:background="@color/colorBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/first_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/property_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_city"
                        android:contentDescription="@string/icon_generic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/property_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tool:text="Avícola"
                            android:text="@{viewModel.property.name}"
                            style="@style/TextAppearance.MaterialComponents.Headline6"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:weightSum="3"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/meter_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    tool:text="1234567"
                                    android:text="@{viewModel.property.serialNumber}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/meter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:text="@string/meter"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/property_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    tool:text="1234567"
                                    android:text="@{Long.toString(viewModel.property.property)}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/property"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:text="@string/property"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/derivative_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    tool:text="1234567"
                                    android:text="@{Long.toString(viewModel.property.derived)}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/derivative"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:text="@string/derived"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/second_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/first_card"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tool:text="DIRECCIÓN"/>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorBackground"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/icon_street"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_street"
                            android:contentDescription="@string/icon_generic"/>

                        <LinearLayout
                            android:id="@+id/street_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/icon_street"
                            android:layout_marginStart="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/street_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tool:text="REVOLUCION"
                                android:text="@{viewModel.property.street}"
                                style="@style/TextAppearance.MaterialComponents.Body1"/>

                            <TextView
                                android:id="@+id/street"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/street"
                                android:textAllCaps="true"
                                />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/icon_downtown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_below="@id/street_container"
                            android:src="@drawable/ic_downtown"
                            android:contentDescription="@string/icon_generic"/>

                        <LinearLayout
                            android:id="@+id/downtown_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/street_container"
                            android:layout_toEndOf="@id/icon_downtown"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/downtown_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tool:text="CENTRO"
                                android:text="@{viewModel.property.suburb}"
                                style="@style/TextAppearance.MaterialComponents.Body1"/>

                            <TextView
                                android:id="@+id/downtown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/suburb"
                                android:textAllCaps="true"
                                />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/icon_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_below="@id/downtown_container"
                            android:src="@drawable/ic_number"
                            android:contentDescription="@string/icon_generic"/>

                        <LinearLayout
                            android:id="@+id/number_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/downtown_container"
                            android:layout_toEndOf="@id/icon_number"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="4dp"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/number_content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tool:text="6"
                                    android:text="@{viewModel.property.number}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/number"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/int_number_content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tool:text="6"
                                    android:text="@{viewModel.property.interior}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/int_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/interiorNumberShort"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/batch_number_content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tool:text="6"
                                    android:text="@{viewModel.property.lot}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/batch_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lot"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/icon_square"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_below="@id/number_container"
                            android:src="@drawable/ic_group"
                            android:contentDescription="@string/icon_generic"/>

                        <LinearLayout
                            android:id="@+id/square_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/number_container"
                            android:layout_toEndOf="@id/icon_square"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="4dp"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/square_content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tool:text="12"
                                    android:text="@{Integer.toString(viewModel.property.idBlock)}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/square"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/blockTranslate"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/bis_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tool:text="12"
                                    android:text="@{viewModel.property.bis}"
                                    style="@style/TextAppearance.MaterialComponents.Body1"/>

                                <TextView
                                    android:id="@+id/bis"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bis"
                                    android:textAllCaps="true"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/third_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/second_card"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tool:text="LOCALIZACIÓN"/>

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorBackground"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/icon_intersection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_accessibility"
                            android:contentDescription="@string/icon_generic"/>

                        <LinearLayout
                            android:id="@+id/intersection_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/icon_intersection"
                            android:layout_marginStart="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/intersection_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tool:text="ESQ. DIAZ MIRON"
                                android:text="@{viewModel.property.location}"
                                style="@style/TextAppearance.MaterialComponents.Body1"/>

                            <TextView
                                android:id="@+id/intersection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/location"
                                android:textAllCaps="true"
                                />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/icon_cal_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_below="@id/intersection_container"
                            android:src="@drawable/ic_assignment"
                            android:contentDescription="@string/icon_generic"/>

                        <LinearLayout
                            android:id="@+id/cal_client_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/intersection_container"
                            android:layout_toEndOf="@id/icon_cal_client"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/cal_client_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.property.customerRating}"
                                tool:text="M7 EN REG INT. X LA CASETA DE BOMBA"
                                style="@style/TextAppearance.MaterialComponents.Body1"/>

                            <TextView
                                android:id="@+id/cal_client"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/clientRating"
                                android:textAllCaps="true"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>