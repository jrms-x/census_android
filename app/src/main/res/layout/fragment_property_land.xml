<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.jr.census.viewmodel.PropertyDetailViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.core.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true"
        android:theme="@style/LoginTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <androidx.cardview.widget.CardView
            android:id="@+id/first_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelPropertyType"
                        android:text="@string/property_type_hint"
                        />
                    <Spinner
                        android:layout_below="@id/labelPropertyType"
                        android:layout_width="match_parent"
                        android:selectedItemPosition="@={viewModel.censusData.propertyTypePosition}"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerPropertyType"/>

                </RelativeLayout>

                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelChargeType"
                        android:text="@string/charge_type_hint"
                        />
                    <Spinner
                        android:layout_below="@id/labelChargeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:selectedItemPosition="@={viewModel.censusData.chargeTypePosition}"
                        android:id="@+id/spinnerChargeType"/>

                </RelativeLayout>


                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelAnomalyType"
                        android:text="@string/anomaly_type_hint"
                        />
                    <Spinner
                        android:layout_below="@id/labelAnomalyType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:selectedItemPosition="@={viewModel.censusData.anomalyPosition}"
                        android:id="@+id/spinnerAnomalies"/>

                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</layout>