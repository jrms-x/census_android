<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"

    >
    <data>
        <variable
            name="picture"
            type="com.jr.census.models.Picture" />
        <variable
            name="listener"
            type="com.jr.census.view.callback.ImageListListener" />
        <import type="android.text.TextUtils"/>
        <import type="com.jr.census.R"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:elevation="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="250dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/pictureSmall"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@color/colorAccent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/round_src_item_picture" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_toStartOf="@id/editOption"
                        android:id="@+id/titleImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:text="@{picture.title}"
                        tool:text="Title"/>

                    <TextView
                        android:layout_below="@id/titleImage"
                        android:layout_toStartOf="@id/editOption"
                        android:id="@+id/subtitleImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@{picture.subtitle}"
                        tool:text="Subhead"/>
                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="15dp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/editOption"
                        android:onClick="@{() -> listener.onSelectEdit(picture)}"
                        android:layout_width="33dp"
                        android:cropToPadding="true"
                        android:padding="5dp"
                        android:layout_height="33dp"
                        app:srcCompat="@drawable/edit"
                        />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:background="?attr/selectableItemBackground"
                android:id="@+id/imageViewBigPicture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/title_container"
                android:src="@color/colorBackground"
                android:contentDescription="@string/generic_picture_content_desc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewBigPicture"
                android:layout_margin="16dp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:text="@{picture.description}"
                tool:text="Aquí irá una descripción de la foto tomada"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
